<div class='nested-fields'>
  <%= link_to_remove_association 'Remove quotum', f, class: 'badge badge-danger float-right' %>
  <div class="form-group">
    <%= f.label :q_hours, 'Hours' %>
    <%= f.number_field :q_hours, min: 0, max: 24, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :q_minutes, 'Minutes' %>
    <%= f.number_field :q_minutes, min: 0, max: 60, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :amount %>
    <%= f.number_field :amount, min: 0, class: 'form-control' %>
  </div>
</div>
